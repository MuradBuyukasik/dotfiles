include-file = ~/.config/polybar/modules.ini
include-file = ~/.config/polybar/colors.ini

[bar/system]
monitor = 
monitor-fallback = eDP-1
bottom = false
fixed-center = true

width = 5%
height = 30

offset-x = 70.5%
offset-y = 10
radius = 15
enable-ipc = true

background = ${colors.background}
foreground = ${colors.foreground}

padding = 3

font-0 = "Noto Sans:pixelsize=16:style=Regular;2" 
font-1 = "Noto Color Emoji:pixelsize=16:style=Regular:scale=10;2"

modules-center = battery pulseaudio

[bar/bspwm]
monitor = 
monitor-fallback = eDP-1
bottom = false
fixed-center = true

width = 40%
height = 30

offset-x = 30%
offset-y = 10
radius = 15
enable-ipc = true

background = ${colors.background}
foreground = ${colors.foreground}

padding = 3
module-margin = 2

font-0 = "Noto Sans:pixelsize=16:style=Regular;2" 
font-1 = "Noto Color Emoji:pixelsize=16:style=Regular:scale=10;2"

; under-/overline pixel size and color
line-size = 0
line-color = #f00

modules-left = bspwm
modules-center =
modules-right = date

tray-position = none
tray-maxsize = 16
tray-padding = 3
tray-scale = 1.0

scroll-up = #bspwm.prev
scroll-down = #bspwm.next

